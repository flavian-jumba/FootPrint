{
  "version": 2,
  "framework": null,
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    { "src": "/build/(.*)", "dest": "/public/build/$1" },
    { "src": "/favicon.ico", "dest": "/public/favicon.ico" },
    { "src": "/robots.txt", "dest": "/public/robots.txt" },
    { "src": "/storage/(.*)", "dest": "/public/storage/$1" },
    { "src": "/assets/(.*)", "dest": "/public/assets/$1" },
    { "src": "/(css|js)/(.*)", "dest": "/public/$1/$2" },
    { "src": "/images/(.*)", "dest": "/public/images/$1" },
    { "src": "^(?!/api).*$", "dest": "/api/index.php" },
    { "handle": "filesystem" }
  ],
  "env": {
    "APP_NAME": "Footprints of Hope",
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://${VERCEL_URL}",
    "ASSET_URL": "https://${VERCEL_URL}",
    "APP_CONFIG_CACHE": "/tmp/config.php",
    "APP_EVENTS_CACHE": "/tmp/events.php",
    "APP_PACKAGES_CACHE": "/tmp/packages.php",
    "APP_ROUTES_CACHE": "/tmp/routes.php",
    "APP_SERVICES_CACHE": "/tmp/services.php",
    "CACHE_DRIVER": "array",
    "LOG_CHANNEL": "stderr",
    "SESSION_DRIVER": "cookie",
    "VIEW_COMPILED_PATH": "/tmp/views",
    "SSR_TEMP_PATH": "/tmp/ssr",
    "NODE_PATH": "node"
  },
  "buildCommand": "npm run vercel-build"
}